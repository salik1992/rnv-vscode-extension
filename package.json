{
	"private": true,
	"name": "rnv-vscode-extension",
	"displayName": "ReNative",
	"description": "ReNative extension for VSCode",
	"version": "0.0.3",
	"publisher": "salik1992",
	"repository": "https://github.com/salik1992/rnv-vscode-extension",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/renative.json",
		"onCommand:extension.rnv.refresh"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"category": "context",
				"command": "extension.rnv.copy",
				"title": "Copy command"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "rnv",
					"name": "ReNative"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "extension.rnv.copy",
					"when": "viewItem == rnvLaunch"
				}
			]
		},
		"configuration": {
			"title": "ReNative",
			"properties": {
				"rnv.runner": {
					"type": "string",
					"default": "npx",
					"description": "Run rnv through a runner like npx for example. Leave empty to run rnv directly."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.34.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2"
	}
}
